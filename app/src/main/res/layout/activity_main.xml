<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/solution"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@id/buttons_layout"
        android:id="@+id/result"
        android:layout_margin="16dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingVertical="32dp"
        android:background="#393636"
        android:id="@+id/buttons_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="C"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_c"
                android:layout_margin="12dp"
                android:backgroundTint="@color/teal_200"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="("
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_open_bracket"
                android:layout_margin="12dp"
                android:backgroundTint="#FF5B00"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text=")"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_close_bracket"
                android:layout_margin="12dp"
                android:backgroundTint="#FF5B00"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="/"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_divide"
                android:layout_margin="12dp"
                android:backgroundTint="#FF5B00"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="7"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_7"
                android:layout_margin="12dp"
                android:backgroundTint="#EFA47C"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="8"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_8"
                android:layout_margin="12dp"
                android:backgroundTint="#EFA47C"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="9"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_9"
                android:layout_margin="12dp"
                android:backgroundTint="#EFA47C"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="*"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_multiply"
                android:layout_margin="12dp"
                android:backgroundTint="#FF5B00"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="4"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_4"
                android:layout_margin="12dp"
                android:backgroundTint="#EFA47C"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="5"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_5"
                android:layout_margin="12dp"
                android:backgroundTint="#EFA47C"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="6"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_6"
                android:layout_margin="12dp"
                android:backgroundTint="#EFA47C"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="-"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_minus"
                android:layout_margin="12dp"
                android:backgroundTint="#FF5B00"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="1"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_1"
                android:layout_margin="12dp"
                android:backgroundTint="#EFA47C"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="2"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_2"
                android:layout_margin="12dp"
                android:backgroundTint="#EFA47C"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="3"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_3"
                android:layout_margin="12dp"
                android:backgroundTint="#EFA47C"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="+"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_plus"
                android:layout_margin="12dp"
                android:backgroundTint="#FF5B00"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="AC"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/button_ac"
                android:layout_margin="12dp"
                android:backgroundTint="@color/teal_200"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="0"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_0"
                android:layout_margin="12dp"
                android:backgroundTint="#EFA47C"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="."
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_decimal"
                android:layout_margin="12dp"
                android:backgroundTint="#E1804C"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="="
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_equals"
                android:layout_margin="12dp"
                android:backgroundTint="#FFAA00"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>